{
  "name": "thiphariel/config-file-loader",
  "description": "Configuration file loader in PHP",
  "keywords": ["config", "file", "loader", "php", "json"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Thiphariel",
      "email": "thiphariel@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Config\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "squizlabs/php_codesniffer": "^3.0",
    "satooshi/php-coveralls": "^1.0"
  },
  "scripts": {
    "lint": [
      "vendor/bin/phpcs"
    ],
    "test": [
      "vendor/bin/phpunit --colors --coverage-text"
    ]
  }
}
